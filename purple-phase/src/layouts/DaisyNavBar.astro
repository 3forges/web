---
export interface Props {
	logo: string;
}

const { logo } = Astro.props;

/**
 * --- 
 * Okay, here i will fetch data from a public free rest API https://randomuser.me/api
 * --- 
 * https://docs.astro.build/en/guides/data-fetching/
 */
const rdUserResponse = await fetch('https://randomuser.me/api/');
const randomUsersData = await rdUserResponse.json();
const randomUser = randomUsersData.results[0];

