    const forgesMenuClickHandler = (event) => {
        // const clickedMenuItem = $(event.target);
        //const clickedMenuItem = event.target;
        const clickedMenuItem = event.target;


        console.log(`-----------------------------------------`)
        console.log(`  clickedMenuItem : `)
        console.log(`-----------------------------------------`)
        console.log(clickedMenuItem);
        console.log(`-----------------------------------------`)


        const allMenuItems = document.querySelectorAll(".forges.menu3f.item3f");



        allMenuItems.forEach((menuItem) => {
            
            menuItem.classList.remove("border-purple-500");
            menuItem.classList.remove("border-b-4");

            menuItem.classList.remove("hover:text-purple-500");
            menuItem.classList.remove("transition");
            menuItem.classList.remove("duration-300");

            menuItem.classList.add("hover:text-purple-500");
            menuItem.classList.add("transition");
            menuItem.classList.add("duration-300");          
        });

        clickedMenuItem.classList.add("border-purple-500");
        clickedMenuItem.classList.add("border-b-4");
        console.log(`-----------------------------------------`)
        console.log(`   Just clicked Menu Item : `)
        console.log(`-----------------------------------------`)
        console.log(clickedMenuItem);
        console.log(`-----------------------------------------`)
        
    }
    const initForgesMenuJs = () => {
        const allMenuItems = document.querySelectorAll(".forges.menu3f.item3f");
        allMenuItems.forEach((menuItem) => {
            // https://developer.mozilla.org/en-US/docs/Web/API/Event/target
            console.log(`-----------------------------------------`)
            console.log(`  Init the click event listener on the : `)
            console.log(`-----------------------------------------`)
            console.log(menuItem);
            console.log(`-----------------------------------------`)
            menuItem.addEventListener('click', forgesMenuClickHandler);
        });
    }
    initForgesMenuJs();

</script>